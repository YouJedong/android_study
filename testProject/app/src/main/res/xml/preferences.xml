<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="id"
        android:title="아이디"
        android:selectable="true"/>
    <EditTextPreference
        android:key="pwd"
        android:title="비밀 번호"
        android:selectable="true"/>

    <CheckBoxPreference
        android:key="auto_login"
        android:title="자동로그인"
        android:summary="어플리케이션이 실행될 때 자동으로 로그인"
        android:defaultValue="true"/>
    <CheckBoxPreference
        android:key="auto_pwd"
        android:title="비밀번호 저장"
        android:defaultValue="true"/>

</PreferenceScreen>